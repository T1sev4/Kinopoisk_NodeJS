                />
              </div>
              <div class="film-info">
                <a href="">Все везде и сразу</a>
                <a href="">Everything Everywhere All at once, 2021, 139min</a>
                <a href="">США, Фантастика</a>
                <button class="film-btn">
                  <img
                    src="/images/icons/play.svg"
                    alt=""
                  />
                  Смотреть
                </button>
              </div>
            </div>
            <div class="card-right">
              <div class="film-rate">
                <p>7.3</p>
              </div>
              <div class="film-btns">
                <a
                  href="/edit"
                  class=""
                  >Редактировать</a
                >
                <a
                  href=""
                  class=""
                  >Удалить</a
                >
              </div>
            </div>
          </div>
        </div>
